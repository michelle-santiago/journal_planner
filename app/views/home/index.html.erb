<div class="flex h-screen pt-16 overflow-hidden ">
<%= render "sidebar"%>
    <div id="main-content" class="relative w-full h-full overflow-y-auto lg:ml-64 dark:bg-gray-900">
        <main>
            <!--Table(Task's today)-->
            <div class="px-4 pt-6">
                <div class="p-4 border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
                    <div>
                        <div class="mb-4 lg:mb-0">
                            <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">Today's tasks</h3>
                            <span class="text-base font-normal text-gray-500 dark:text-gray-400">This is a list of tasks due today</span>
                        </div>
                        <div class="flex flex-col mt-6">
                            <div class="overflow-x-auto rounded-lg">
                                <div class="inline-block min-w-full align-middle">
                                    <div class="overflow-hidden shadow sm:rounded-lg">
                                        <%= render "tasks_today"%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>  
            </div>
        </main>
    </div>
</div>