<div class="px-20 py-20 flex flex-col justify-center items-center">
    <%= form_with model: category, local: true do |f| %>
    <p>
        <% if category.errors.any? %>
            <ul>
                <% category.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
    </p>
    <p>
        <%= f.label :Name%><br/>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :User %><br/> 
        <%= f.text_field :user_id %><!--temporary input for email-->
    </p>

    <button class="bg-pink-200 rounded-md px-3 py-2 text-sm font-medium">
        <%=f.submit%>
    </button>

    <% end %>
</div>