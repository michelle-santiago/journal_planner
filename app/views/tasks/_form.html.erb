<div class="flex h-screen pt-10 overflow-hidden ">
      <div class="relative w-full dark:bg-gray-900">
        <div class="flex flex-col mt-5 overflow-hidden items-center justify-center px-6 pt-4 mx-auto md:h-screen pt:mt-0 dark:bg-gray-900">
            <div class="w-full max-w-xl space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
                 <h4 class="mb-2 text-xl  tracking-tight text-gray-900 md:text-4xl lg:text-2xl dark:text-white">Create a new task</h4>  
                <div class="mt-2 space-y-6">
                    <%= form_with model:  [category, task], local: true do |f| %>
                        <% if task.errors.any? %>
                            <div class="flex p-4 text-sm text-gray-800 rounded-lg bg-gray-50 dark:bg-gray-800 dark:text-gray-300" role="alert">
                                <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
                                <span class="sr-only">Info</span>
                                    <ul>
                                        <% task.errors.full_messages.each do |message| %>
                                            <li class="font-medium"><%= message %></li>
                                        <% end %>
                                    </ul>
                            </div>
                        <% end %>
                        <div>
                            <%= f.label :Title,  class: "block text-sm font-medium text-gray-900 dark:text-white"%>
                            <%= f.text_field :title, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-300 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
                        </div>
                        <div>
                            <%= f.label :Description,  class: "block text-sm font-medium text-gray-900 dark:text-white"%>
                            <%= f.text_area :description, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-300 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
                        </div>
                        <div>
                            <%= f.label :Priority,  class: "block  text-sm font-medium text-gray-900 dark:text-white"%>
                            <%= f.select(:priority,  ['High', 'Medium', 'Low', 'None'], {}, { :class => "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-300 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" }) %>
                        </div>
                        <div>
                            <%= f.label :Deadline,  class: "block text-sm font-medium text-gray-900 dark:text-white"%>
                            <%= f.date_field :deadline, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-300 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
                        </div>
                        <%if type === "edit"%>
                            <%= f.label :Status,  class: "block text-sm font-medium text-gray-900 dark:text-white"%>
                            <%= f.select(:status, ['Not Started', 'In Progress', 'Completed'], {}, { :class => "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-300 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" }) %>
                        <% else %>
                            <%= f.hidden_field :status, :value => 'Not Started' %>
                        <% end %>
                        
                        <%=f.submit 'Submit', class: "w-full mt-5 px-5 py-3 text-base font-medium text-center text-white bg-primary-300 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"%>

                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>