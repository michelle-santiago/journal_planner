<div class="px-20 py-20 flex flex-col justify-center items-center">
    <%= form_with model: [category, task], local: true do |f| %>
    <p>
        <% if task.errors.any? %>
            <ul>
                <% task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
    </p>
    <p>
        <%= f.label :Title%><br/>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :Description %><br/> 
        <%= f.text_area :description %>
    </p>
    
    <p>
        <%= f.label :Priority %><br/> 
        <%= f.select :priority, ['High', 'Medium', 'Low', 'None']%>
    </p>
    
    <p>
        <%= f.label :Deadline%><br/> 
        <%= f.date_field :deadline %>
    </p>

    <%= f.hidden_field :status, :value => 'Not Started' %>

    <button class="bg-pink-200 rounded-md px-3 py-2 text-sm font-medium">
        <%=f.submit%>
    </button>

    <% end %>
</div>